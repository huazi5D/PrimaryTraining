<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginTop="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:id="@+id/ed_text"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="身份证号："
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ed_text"
            android:background="@color/white"
            android:hint="请输入身份证号"
            android:lines="1"
            android:layout_marginLeft="10dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textSize="12sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip">


                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="110dip"
                    android:layout_height="150dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/register_header_default"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@+id/iv_img"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="姓名："
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:hint="请输入姓名"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dip"
                            android:paddingRight="2dip"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="电话："
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="请输入电话"
                            android:paddingLeft="2dip"
                            android:paddingRight="2dip"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="密码："
                            android:textColor="@color/black"/>


                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="2dip"
                            android:paddingRight="2dip"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="重复密码："
                            android:textColor="@color/black"/>


                        <EditText
                            android:id="@+id/et_repassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dip"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="请再输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="2dip"
                            android:paddingRight="2dip"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">


                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="学习类型："
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/study_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:background="@color/white"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:text="出租"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">


                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="资格证号："
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/tv_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入资格证号"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="所属区域："
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spinner_area1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dip"/>

                    <Spinner
                        android:id="@+id/spinner_area2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/spinner_area1"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dip"/>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="证件初领日期："
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/data_select"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="... ..."
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_toLeftOf="@+id/data_select"
                    android:layout_toRightOf="@+id/time_text"
                    android:paddingTop="5dip"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">


                <TextView
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="学习周期："
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>


                <Spinner
                    android:id="@+id/spinner_cycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"></Spinner>

            </LinearLayout>
            
            
            <Button
                android:id="@+id/btn_register"
                android:layout_width="100dip"
                android:layout_height="35dip"
                android:text="注册"
                android:layout_marginTop="20dip"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:background="@drawable/modify_button"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
